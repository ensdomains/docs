{
    "root": true,
    "extends": ["plugin:v3xlabs/recommended", "plugin:tailwindcss/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "ignorePatterns": ["!**/*"],
    "plugins": ["v3xlabs", "tailwindcss"],
    "env": {
        "node": true,
        "browser": true
    },
    "rules": {
        "sonarjs/cognitive-complexity": ["warn", 20],
        "tailwindcss/no-custom-classname": "off"
    },
    "settings": {
        "tailwindcss": {
            "config": "./tailwind.config.js"
        }
    }
}
